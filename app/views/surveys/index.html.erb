<h1>Listing surveys</h1>

<table>
  <tr>
    <th>Why</th>
    <th>How long</th>
    <th>App name</th>
    <th>Language</th>
    <th>Free</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.why %></td>
    <td><%= survey.how_long %></td>
    <td><%= survey.app_name %></td>
    <td><%= survey.language %></td>
    <td><%= survey.free %></td>
    <td><%= link_to 'Show', survey %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

